<Window x:Class="PriceComp.GUI.Payment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dane do płatności" Height="600" Width="450" 
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Border Padding="25">
        <StackPanel>
            <TextBlock Text="DANE DOSTAWY I PŁATNOŚCI" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#333"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                    <TextBlock Text="Imię:"/>
                    <TextBox x:Name="TxtFirstName" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                    <TextBlock Text="Nazwisko:"/>
                    <TextBox x:Name="TxtLastName" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                    <TextBlock Text="Numer telefonu:"/>
                    <TextBox x:Name="TxtPhone" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
                    <TextBlock Text="Ulica:"/>
                    <TextBox x:Name="TxtStreet" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Margin="5">
                    <TextBlock Text="Nr domu:"/>
                    <TextBox x:Name="TxtHouseNum" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
                    <TextBlock Text="Nr mieszkania (opcj.):"/>
                    <TextBox x:Name="TxtApartmentNum" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="5,15,5,5">
                    <TextBlock Text="Numer karty kredytowej:" FontWeight="Bold"/>
                    <TextBox x:Name="TxtCardNumber"
                             FontSize="16"
                             Padding="10"
                             Background="#EEE"
                             Margin="0,5,0,0"
                             MaxLength="19"
                             TextAlignment="Center"
                             TextChanged="TxtCardNumber_TextChanged"/>
                </StackPanel>
            </Grid>

            <Separator Margin="0,20" Background="#DDD"/>

            <TextBlock Text="Kwota do zapłaty:" FontWeight="Bold" Margin="5,0"/>
            <TextBox x:Name="TxtTotalPrice" FontSize="18" FontWeight="Bold" 
                     Text="" IsReadOnly="True" Background="#EEE" 
                     Padding="10" TextAlignment="Center" Margin="5"/>

            <Button x:Name="BtnConfirm" Content="POTWIERDŹ PŁATNOŚĆ" 
                    Margin="5,20,5,0" Height="45" FontSize="16" 
                    Background="#27AE60" Foreground="White" FontWeight="Bold"
                    Click="BtnConfirm_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>